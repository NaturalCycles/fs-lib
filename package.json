{
  "name": "@naturalcycles/fs-lib",
  "version": "2.0.0",
  "description": "CLI and Node.js API to copy files with globs, promises, typescript and stuff.",
  "scripts": {
    "kpy": "tsn ./src/bin/kpy.ts",
    "kpy-debug": "tsn ./src/bin/kpy.ts src dist",
    "del": "tsn ./src/bin/del.ts",
    "del-debug": "tsn ./src/bin/del.ts dist --verbose --debug"
  },
  "dependencies": {
    "@naturalcycles/promise-lib": "^2.1.2",
    "ansi-colors": "^3.2.4",
    "cp-file": "^7.0.0",
    "fs-extra": "^7.0.1",
    "globby": "^9.1.0",
    "move-file": "^1.2.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@naturalcycles/dev-lib": "^6.0.0",
    "@naturalcycles/semantic-release": "^1.0.0",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.0.0",
    "jest": "^24.1.0",
    "jest-junit": "^6.2.1",
    "prettier": "^1.14.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "files": [
    "dist",
    "src",
    "!src/test",
    "!src/**/*.test.ts",
    "!src/**/__snapshots__",
    "!src/**/__exclude"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "del": "dist/bin/del.js",
    "kpy": "dist/bin/kpy.js"
  },
  "engines": {
    "node": ">=10.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NaturalCycles/kpy"
  },
  "author": "Kirill Groshkov",
  "license": "MIT"
}
